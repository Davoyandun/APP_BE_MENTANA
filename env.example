# App configuration
DEBUG=true
APP_NAME=APP_BE_MENTANA
VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000

# AWS configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# AWS Services
AWS_S3_BUCKET=your-s3-bucket-name
AWS_DYNAMODB_TABLE=your-dynamodb-table-name
AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/your-account/your-queue
AWS_SNS_TOPIC_ARN=arn:aws:sns:us-east-1:your-account:your-topic

# AWS Local Development (optional)
AWS_ENDPOINT_URL=http://localhost:8000

# Database (NoSQL - DynamoDB)
# No traditional connection URL required

# Redis (optional for cache)
REDIS_URL=redis://localhost:6379

# JWT
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"] 